@model List<NotesApp.Models.Note>

<h2>Notes List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Статус</th>
            <th>Группа</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Name</td>
                <td>@note.Status</td>
                <td>@note.Group</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@note.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
                <td>
                    <form asp-action="Edit" asp-route-id="@note.Id" method="post">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="btn-group">
    <a asp-action="Create" class="btn btn-primary">Create New Note</a>
    <a asp-action="Search" class="btn btn-primary">Search for Note(s)</a>
</div>
